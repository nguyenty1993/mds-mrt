{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.format.enable": true,
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.arrowParens": "always",
  "prettier.trailingComma": "all",
  "eslint.validate": [
      "javascript",
      "javascriptreact",
      "typescript",
      "typescriptreact"
    ],
  "editor.rulers": [
    90
  ],
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": false,
  }
}
